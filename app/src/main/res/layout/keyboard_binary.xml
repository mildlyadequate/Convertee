<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/llKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/themeSecondaryDark"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/button_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/keyboard_button_selector"
                android:text="0"
                android:textColor="@color/themeDayLightText"
                android:textSize="24sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/button_1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_button_selector"
                android:text="1"
                android:textColor="@color/themeDayLightText"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/button_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/keyboard_button_selector"
                app:srcCompat="@android:drawable/ic_input_delete"
                android:contentDescription="@string/content_desc_keyboard_delete"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />


            <ImageButton
                android:id="@+id/button_close"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_button_selector"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/keyboard_button_close"
                android:contentDescription="@string/content_desc_keyboard_close" />

        </LinearLayout>

    </LinearLayout>

</merge>
